<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tv_photoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tittle of the Photo"
        app:layout_constraintStart_toStartOf="@+id/mainPhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainPhoto"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="12dp"
        android:background="#5F8186"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_photoTitle" />

    <ImageView
        android:id="@+id/btn_remove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:rotation="90"
        android:src="@drawable/ic_clear"
        app:layout_constraintBottom_toTopOf="@+id/mainPhoto"
        app:layout_constraintEnd_toEndOf="@+id/mainPhoto"
        app:layout_constraintStart_toEndOf="@+id/mainPhoto"
        app:layout_constraintTop_toTopOf="@+id/mainPhoto" />
</androidx.constraintlayout.widget.ConstraintLayout>